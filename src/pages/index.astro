---
import CommonHead from "@components/layouts/commonHead.astro"
import WorkExperience from "@components/cards/workExperience.astro"
import Projects from "@components/cards/projects.astro"
import Nav from "@components/nav.astro"
import About from "@components/cards/about.astro"
import Socials from "@components/cards/socials.astro"
import Iama from "@components/cards/iama.astro"
import Headshot from "@components/cards/headshot.astro"
import "@fontsource-variable/karla"
import "@fontsource-variable/inconsolata"
---

<html lang="en">
  <CommonHead />
  <body class="container bg-neutral-200 py-5 font-body">
    <Nav />
    <div
      class="grid gap-y-6 pt-5 lg:grid-cols-[1.2fr_1fr] lg:grid-rows-[h-fit_minmax(200px_400px)_300px_100px] lg:gap-x-6"
    >
      <div class="animate-land lg:row-span-1">
        <About />
      </div>
      <div
        class="animate-land col-start-1 row-span-1 flex flex-col gap-x-2 space-y-6 lg:flex-row lg:justify-between lg:space-y-0"
      >
        <Headshot />
        <div
          class="flex flex-col gap-y-6 lg:flex-1 lg:justify-evenly lg:gap-y-4 lg:rounded-xl lg:border-[2px] lg:border-dashed lg:border-neutral-700 lg:p-5"
        >
          <Iama />
          <hr
            class="hidden h-[1px] w-full border-dashed border-neutral-700 lg:block"
          />
          <Socials />
        </div>
      </div>
      <div class="animate-land lg:col-start-2 lg:row-span-4 lg:row-start-1">
        <WorkExperience />
      </div>
      <div class="animate-land lg:row-span-1 lg:self-stretch">
        <Projects />
      </div>
    </div>
  </body>
</html>
