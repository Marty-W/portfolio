---
import { cn } from "src/utils"

interface Props {
  children: any
  title?: string
  className?: string
  contentClass?: string
}

const { title, className, contentClass } = Astro.props
---

<div
  class={cn(
    "relative w-full h-full z-[1] space-y-4 rounded-lg border-[1px] border-neutral-300 bg-neutral-50 p-6 shadow-sm transition-shadow duration-200 ease-in-out hover:shadow-md",
    className,
  )}
>
  <div class="flex items-center gap-x-2">
    <div class="*:h-6 *:w-6">
      <slot name="icon" />
    </div>
    {
      title && (
        <h3 class="font-display text-2xl text-neutral-950 xl:text-3xl">
          {title}
        </h3>
      )
    }
  </div>
  <div class:list={["text-neutral-600 xl:text-lg", contentClass]}>
    <slot />
  </div>
</div>
