---
import Card from "@components/bentoCard.astro"
import AnimatedBorder from "@components/animatedBorder.astro"
import { getCollection } from "astro:content"

const allProjects = await getCollection("project")

allProjects.sort((a, b) => {
  if (a.data.title === "Habitsync") return -1
  return 1
})
---

<Card title="latest projects">
  <div class="space-y-4">
    {
      allProjects.map(({ data: { title, description }, slug }) => (
        <AnimatedBorder>
          <a href={`/projects/${slug}`}>
            <h4 class="font-semibold xl:text-lg">{title}</h4>
            <p>{description}</p>
          </a>
        </AnimatedBorder>
      ))
    }
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" slot="icon">
    <path
      fill="currentColor"
      d="M3 7.5A4.5 4.5 0 0 1 7.5 3h17A4.5 4.5 0 0 1 29 7.5v17a4.5 4.5 0 0 1-4.5 4.5h-17A4.5 4.5 0 0 1 3 24.5zM7.5 5A2.5 2.5 0 0 0 5 7.5v17A2.5 2.5 0 0 0 7.5 27h17a2.5 2.5 0 0 0 2.5-2.5v-17A2.5 2.5 0 0 0 24.5 5zm6.207 5.293a1 1 0 0 1 0 1.414L9.414 16l4.293 4.293a1 1 0 0 1-1.414 1.414l-5-5a1 1 0 0 1 0-1.414l5-5a1 1 0 0 1 1.414 0m4.586 1.414a1 1 0 0 1 1.414-1.414l5 5a1 1 0 0 1 0 1.414l-5 5a1 1 0 0 1-1.414-1.414L22.586 16z"
    ></path>
  </svg>
</Card>
